<%- include("partials/header.ejs") %>

  <h1>My diary pages</h1><br/>
  <% for(var key in locals.dict) {  %>
    <% var value = dict[key]; %>
  <div class="px-4 py-5 my-1 text-center">
  <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(new Date()) %>
    <div class="col-lg-12 mx-auto">
        <form action="/edit" method="POST">
          <textarea name="inputText" <%= locals.editable[key] %> class="editableText lead mb-4 py-4 px-4 border border-primary rounded"><%= value %></textarea>
          <input name="<%= key %>" type="submit" value="<%= locals.editSave[key] %>" class="btn btn-primary btn-lg px-4 mr-2"/>
        </form>
        <form action="/delete" method="POST" class="mt-2">
          <input name="<%= key %>" type="submit" value="Delete" class="btn btn-outline-secondary btn-lg px-4"/>
        </form>
    </div>
  </div>
  <% } %>

  <%- include("partials/footer.ejs") %>